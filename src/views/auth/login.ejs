
<%- include("../partials/header")  %>
<!-- Header -->
<header
  class="fixed top-0 left-0 w-full z-50 bg-white/95 shadow-md backdrop-blur-md"
>
  <nav class="container mx-auto flex items-center justify-between p-4">
    <!-- Logo -->
    <a
      href="index.html"
      class="flex items-center gap-2 text-2xl font-bold text-primary-orange"
    >
      <i class="fas fa-apple-alt text-primary-orange"></i>
      <span>NutriTrack</span>
    </a>

    <!-- Login link -->
    <a
      href="login.html"
      class="px-5 py-2 rounded-full text-white bg-primary-orange font-medium transition hover:bg-orange-600"
    >
      Se connecter
    </a>
  </nav>
</header>

<!-- Main -->
<main class="pt-32 pb-16 px-4">
  <div class="max-w-lg mx-auto bg-white rounded-lg shadow-md p-8">
    <h2 class="text-3xl font-bold text-center text-dark mb-2">
      Créer un compte
    </h2>
    <p class="text-center text-gray mb-6">
      Rejoignez NutriTrack pour un suivi nutritionnel personnalisé
    </p>

    <!-- Form -->
    <form class="space-y-4">
      <!-- Nom complet -->
      <div>
        <label for="name" class="block font-medium text-dark mb-1">
          Nom complet
        </label>
        <input
          type="text"
          id="name"
          placeholder="Entrez votre nom complet"
          class="w-full px-4 py-3 border border-light-gray rounded-lg text-base focus:outline-none focus:border-primary-green focus:ring-2 focus:ring-primary-green/20"
        />
      </div>

      <!-- Email -->
      <div>
        <label for="email" class="block font-medium text-dark mb-1">
          Email
        </label>
        <input
          type="email"
          id="email"
          placeholder="Entrez votre email"
          class="w-full px-4 py-3 border border-light-gray rounded-lg text-base focus:outline-none focus:border-primary-green focus:ring-2 focus:ring-primary-green/20"
        />
      </div>

      <!-- Mot de passe -->
      <div>
        <label for="password" class="block font-medium text-dark mb-1">
          Mot de passe
        </label>
        <input
          type="password"
          id="password"
          placeholder="Entrez votre mot de passe"
          class="w-full px-4 py-3 border border-light-gray rounded-lg text-base focus:outline-none focus:border-primary-green focus:ring-2 focus:ring-primary-green/20"
        />
      </div>

      <!-- Confirmer mot de passe -->
      <div>
        <label for="confirm-password" class="block font-medium text-dark mb-1">
          Confirmer le mot de passe
        </label>
        <input
          type="password"
          id="confirm-password"
          placeholder="Confirmez votre mot de passe"
          class="w-full px-4 py-3 border border-light-gray rounded-lg text-base focus:outline-none focus:border-primary-green focus:ring-2 focus:ring-primary-green/20"
        />
      </div>

      <!-- Submit -->
      <button
        type="submit"
        class="w-full mt-4 px-6 py-3 rounded-full font-semibold text-white bg-primary-orange transition hover:bg-orange-600 hover:-translate-y-0.5 hover:shadow-lg"
      >
        Créer un compte
      </button>
    </form>

    <!-- Divider -->
    <div class="flex items-center my-6">
      <div class="flex-grow h-px bg-light-gray"></div>
      <span class="px-4 text-gray">ou</span>
      <div class="flex-grow h-px bg-light-gray"></div>
    </div>

    <!-- Social login -->
    <div class="grid grid-cols-2 gap-4">
      <a
        href="#"
        class="flex items-center justify-center gap-2 border border-light-gray rounded-lg px-4 py-2 font-medium text-gray hover:bg-light transition"
      >
        <i class="fab fa-google text-red-500"></i>
        Google
      </a>
      <a
        href="#"
        class="flex items-center justify-center gap-2 border border-light-gray rounded-lg px-4 py-2 font-medium text-gray hover:bg-light transition"
      >
        <i class="fab fa-facebook text-blue-600"></i>
        Facebook
      </a>
    </div>

    <!-- Login redirect -->
    <p class="text-center text-gray mt-6">
      Vous avez déjà un compte ?
      <a
        href="login"
        class="text-primary-green font-medium hover:underline"
      >
        Se connecter
      </a>
    </p>
  </div>
</main>
<%- include("../partials/footer")  %>