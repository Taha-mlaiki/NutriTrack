<%- include('../partials/header') %>
<!-- Header -->
<header class="fixed top-0 w-full z-50 bg-white/95 shadow-md backdrop-blur">
  <nav
    class="flex justify-between items-center max-w-[1400px] mx-auto py-4 px-6 md:px-12"
  >
    <a
      href="index.html"
      class="flex items-center gap-2 text-2xl font-bold text-primary-orange"
    >
      <i class="fas fa-apple-alt text-primary-orange"></i>
      <span>NutriTrack</span>
    </a>
    <div class="flex gap-6">
      <a
        href="index.html"
        class="relative font-medium text-dark hover:text-primary-green after:block after:absolute after:w-0 after:h-[3px] after:bg-primary-yellow after:bottom-[-5px] after:left-0 hover:after:w-full after:transition-all"
        >Accueil</a
      >
      <a
        href="index.html#features"
        class="relative font-medium text-dark hover:text-primary-green after:block after:absolute after:w-0 after:h-[3px] after:bg-primary-yellow after:bottom-[-5px] after:left-0 hover:after:w-full after:transition-all"
        >Fonctionnalités</a
      >
      <a
        href="index.html#profiles"
        class="relative font-medium text-dark hover:text-primary-green after:block after:absolute after:w-0 after:h-[3px] after:bg-primary-yellow after:bottom-[-5px] after:left-0 hover:after:w-full after:transition-all"
        >Profils</a
      >
      <a
        href="index.html#testimonials"
        class="relative font-medium text-dark hover:text-primary-green after:block after:absolute after:w-0 after:h-[3px] after:bg-primary-yellow after:bottom-[-5px] after:left-0 hover:after:w-full after:transition-all"
        >Témoignages</a
      >
    </div>
  </nav>
</header>

<!-- Auth Container -->
<div class="flex min-h-screen pt-20 md:pt-0">
  <!-- Left side image -->
  <div
    class="hidden md:flex flex-1 bg-cover bg-center items-center justify-center text-white p-8"
    style="
      background-image: linear-gradient(rgba(0, 0, 0, 0.5), rgba(0, 0, 0, 0.5)),
        url('https://images.unsplash.com/photo-1490818387583-1baba5e638af?ixlib=rb-4.0.3&auto=format&fit=crop&w=1350&q=80');
    "
  >
    <div class="max-w-md text-center">
      <h2 class="text-3xl md:text-4xl font-bold mb-4">
        Rejoignez la communauté NutriTrack
      </h2>
      <p>
        Commencez votre parcours vers une meilleure santé avec un suivi
        nutritionnel personnalisé.
      </p>
      <ul class="mt-6 space-y-3 text-left">
        <li class="flex items-center">
          <i class="fas fa-check-circle text-primary-green mr-2"></i> Analysez
          vos repas avec l'IA
        </li>
        <li class="flex items-center">
          <i class="fas fa-check-circle text-primary-green mr-2"></i>
          Recommandations personnalisées
        </li>
        <li class="flex items-center">
          <i class="fas fa-check-circle text-primary-green mr-2"></i> Rapports
          détaillés
        </li>
      </ul>
    </div>
  </div>

  <!-- Right side form -->
  <div class="flex-1 flex flex-col justify-center max-w-md w-full mx-auto p-8">
    <h2 class="text-2xl font-bold text-center mb-6">Créer un compte</h2>
    <p class="text-center text-gray mb-6">
      Rejoignez NutriTrack pour commencer votre parcours santé
    </p>

    <form class="space-y-6">
      <!-- Full name -->
      <div>
        <label for="fullName" class="block mb-1 font-medium text-dark"
          >Nom complet</label
        >
        <input
          id="fullName"
          type="text"
          placeholder="Entrez votre nom complet"
          class="w-full px-4 py-3 border border-light-gray rounded-lg focus:ring-2 focus:ring-primary-green focus:outline-none"
        />
      </div>

      <!-- Email -->
      <div>
        <label for="email" class="block mb-1 font-medium text-dark"
          >Adresse email</label
        >
        <input
          id="email"
          type="email"
          placeholder="Entrez votre email"
          class="w-full px-4 py-3 border border-light-gray rounded-lg focus:ring-2 focus:ring-primary-green focus:outline-none"
        />
      </div>

      <!-- Password -->
      <div class="relative">
        <label for="password" class="block mb-1 font-medium text-dark"
          >Mot de passe</label
        >
        <input
          id="password"
          type="password"
          placeholder="Créez un mot de passe"
          class="w-full px-4 py-3 border border-light-gray rounded-lg focus:ring-2 focus:ring-primary-green focus:outline-none"
        />
        <i
          class="fas fa-eye absolute right-4 top-1/2 translate-y-1/2 text-gray cursor-pointer"
        ></i>
      </div>

      <!-- Confirm password -->
      <div class="relative">
        <label for="confirmPassword" class="block mb-1 font-medium text-dark"
          >Confirmer le mot de passe</label
        >
        <input
          id="confirmPassword"
          type="password"
          placeholder="Confirmez votre mot de passe"
          class="w-full px-4 py-3 border border-light-gray rounded-lg focus:ring-2 focus:ring-primary-green focus:outline-none"
        />
        <i
          class="fas fa-eye absolute right-4 top-1/2 translate-y-1/2 text-gray cursor-pointer"
        ></i>
      </div>

      <!-- Profile selection -->
      <div>
        <label class="block mb-1 font-medium text-dark"
          >Profil de santé principal</label
        >
        <div class="grid grid-cols-2 gap-2 mt-2">
          <label
            class="border-2 border-light-gray rounded-lg text-center py-2 cursor-pointer hover:border-primary-green"
            >Pathologie chronique
            <input
              type="radio"
              name="profile"
              value="chronic"
              class="hidden peer"
            />
          </label>
          <label
            class="border-2 border-light-gray rounded-lg text-center py-2 cursor-pointer hover:border-primary-green"
            >Athlète
            <input
              type="radio"
              name="profile"
              value="athlete"
              class="hidden peer"
            />
          </label>
        </div>
      </div>

      <!-- Submit -->
      <button
        type="submit"
        class="w-full bg-primary-orange text-white py-3 rounded-full font-semibold hover:bg-[#F57C00] transition-transform hover:-translate-y-0.5 shadow-md hover:shadow-lg"
      >
        Créer un compte
      </button>
    </form>

    <div class="text-center mt-6 text-gray">
      Vous avez déjà un compte?
      <a
        href="login"
        class="text-primary-green font-medium hover:underline"
        >Connectez-vous</a
      >
    </div>
  </div>
</div>
<%- include('../partials/footer') %>