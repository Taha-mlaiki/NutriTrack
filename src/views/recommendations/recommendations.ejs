  <main class="max-w-7xl mx-auto px-6 py-10">
    <div class="mb-8">
      <h1 class="text-3xl font-bold text-gray-900">Personalized Recommendations</h1>
      <p class="text-gray-500">AI-powered suggestions based on your profile and recent activity</p>
    </div>

    <div class="flex items-center justify-between bg-white shadow rounded-lg p-4 mb-8">
      <div class="flex items-center space-x-4">
        <div class="w-12 h-12 rounded-full bg-indigo-600 flex items-center justify-center text-white text-lg">JS</div>
        <div>
          <h3 class="font-semibold text-lg">John Smith</h3>
          <p class="text-sm text-gray-500">Diabetes Management Profile</p>
        </div>
      </div>
      <div class="flex items-center space-x-2 bg-yellow-100 text-yellow-700 px-3 py-1 rounded-full">
        <i class="fas fa-lightbulb"></i>
        <span>8 Active Recommendations</span>
      </div>
    </div>

    <div class="flex flex-wrap gap-3 mb-8">
      <button class="filter-btn active bg-indigo-600 text-white px-4 py-2 rounded-full" data-filter="all"><i class="fas fa-layer-group"></i> All</button>
      <button class="filter-btn bg-gray-200 px-4 py-2 rounded-full" data-filter="medical"><i class="fas fa-heartbeat"></i> Medical</button>
      <button class="filter-btn bg-gray-200 px-4 py-2 rounded-full" data-filter="workout"><i class="fas fa-running"></i> Workout</button>
      <button class="filter-btn bg-gray-200 px-4 py-2 rounded-full" data-filter="nutrition"><i class="fas fa-utensils"></i> Nutrition</button>
      <button class="filter-btn bg-gray-200 px-4 py-2 rounded-full" data-filter="hydration"><i class="fas fa-tint"></i> Hydration</button>
      <button class="filter-btn bg-gray-200 px-4 py-2 rounded-full" data-filter="weight"><i class="fas fa-weight"></i> Weight</button>
    </div>

    <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-6" id="recommendationsContainer">
      <div class="recommendation-card bg-white shadow rounded-lg p-6" data-type="medical">
        <div class="flex items-center justify-between mb-4">
          <div class="flex items-center space-x-2">
            <i class="fas fa-heartbeat text-red-500"></i>
            <span class="font-semibold">Medical Advice</span>
          </div>
          <span class="status-badge text-xs px-2 py-1 rounded-full bg-blue-100 text-blue-600">New</span>
        </div>
        <p class="text-sm text-gray-600 mb-4">Check your blood sugar levels after every meal for better tracking.</p>
        <div class="flex justify-between">
          <button class="check-btn bg-green-100 text-green-700 px-3 py-1 rounded-full text-sm">Mark as Followed</button>
          <button class="dismiss-btn bg-gray-100 text-gray-600 px-3 py-1 rounded-full text-sm">Dismiss</button>
        </div>
      </div>

      <div class="recommendation-card bg-white shadow rounded-lg p-6" data-type="workout">
        <div class="flex items-center justify-between mb-4">
          <div class="flex items-center space-x-2">
            <i class="fas fa-running text-green-500"></i>
            <span class="font-semibold">Workout Tip</span>
          </div>
          <span class="status-badge text-xs px-2 py-1 rounded-full bg-blue-100 text-blue-600">New</span>
        </div>
        <p class="text-sm text-gray-600 mb-4">Take a 15-minute walk after lunch to improve digestion and control sugar levels.</p>
        <div class="flex justify-between">
          <button class="check-btn bg-green-100 text-green-700 px-3 py-1 rounded-full text-sm">Mark as Followed</button>
          <button class="dismiss-btn bg-gray-100 text-gray-600 px-3 py-1 rounded-full text-sm">Dismiss</button>
        </div>
      </div>

      <div class="recommendation-card bg-white shadow rounded-lg p-6" data-type="nutrition">
        <div class="flex items-center justify-between mb-4">
          <div class="flex items-center space-x-2">
            <i class="fas fa-utensils text-yellow-500"></i>
            <span class="font-semibold">Nutrition</span>
          </div>
          <span class="status-badge text-xs px-2 py-1 rounded-full bg-blue-100 text-blue-600">New</span>
        </div>
        <p class="text-sm text-gray-600 mb-4">Add more fiber to your breakfast with whole-grain cereals or oats.</p>
        <div class="flex justify-between">
          <button class="check-btn bg-green-100 text-green-700 px-3 py-1 rounded-full text-sm">Mark as Followed</button>
          <button class="dismiss-btn bg-gray-100 text-gray-600 px-3 py-1 rounded-full text-sm">Dismiss</button>
        </div>
      </div>

      <div class="recommendation-card bg-white shadow rounded-lg p-6" data-type="hydration">
        <div class="flex items-center justify-between mb-4">
          <div class="flex items-center space-x-2">
            <i class="fas fa-tint text-blue-500"></i>
            <span class="font-semibold">Hydration</span>
          </div>
          <span class="status-badge text-xs px-2 py-1 rounded-full bg-blue-100 text-blue-600">New</span>
        </div>
        <p class="text-sm text-gray-600 mb-4">Drink at least 2 liters of water daily to stay hydrated and maintain energy.</p>
        <div class="flex justify-between">
          <button class="check-btn bg-green-100 text-green-700 px-3 py-1 rounded-full text-sm">Mark as Followed</button>
          <button class="dismiss-btn bg-gray-100 text-gray-600 px-3 py-1 rounded-full text-sm">Dismiss</button>
        </div>
      </div>

      <div class="recommendation-card bg-white shadow rounded-lg p-6" data-type="weight">
        <div class="flex items-center justify-between mb-4">
          <div class="flex items-center space-x-2">
            <i class="fas fa-weight text-purple-500"></i>
            <span class="font-semibold">Weight Goal</span>
          </div>
          <span class="status-badge text-xs px-2 py-1 rounded-full bg-blue-100 text-blue-600">New</span>
        </div>
        <p class="text-sm text-gray-600 mb-4">Try reducing portion sizes slightly to gradually achieve your target weight.</p>
        <div class="flex justify-between">
          <button class="check-btn bg-green-100 text-green-700 px-3 py-1 rounded-full text-sm">Mark as Followed</button>
          <button class="dismiss-btn bg-gray-100 text-gray-600 px-3 py-1 rounded-full text-sm">Dismiss</button>
        </div>
      </div>
    </div>
  </main>

  <footer class="bg-white mt-10 shadow py-4 text-center">
    <p class="text-gray-500">&copy; 2025 NutriTrack. All rights reserved.</p>
    <p class="text-sm text-gray-400">Built with ❤️ for better health</p>
  </footer>

  <script>
    const filterButtons = document.querySelectorAll(".filter-btn");
    const recommendationCards = document.querySelectorAll(".recommendation-card");

    filterButtons.forEach(btn => {
      btn.addEventListener("click", () => {
        filterButtons.forEach(b => {
          b.classList.remove("bg-indigo-600", "text-white");
          b.classList.add("bg-gray-200");
        });
        btn.classList.remove("bg-gray-200");
        btn.classList.add("bg-indigo-600", "text-white");
        const filter = btn.getAttribute("data-filter");
        recommendationCards.forEach(card => {
          if (filter === "all" || card.dataset.type === filter) {
            card.style.display = "block";
          } else {
            card.style.display = "none";
          }
        });
      });
    });

    const checkBtns = document.querySelectorAll(".check-btn");
    checkBtns.forEach(btn => {
      btn.addEventListener("click", () => {
        const status = btn.closest(".recommendation-card").querySelector(".status-badge");
        status.textContent = "Followed";
        status.className = "status-badge text-xs px-2 py-1 rounded-full bg-green-100 text-green-600";
      });
    });

    const dismissBtns = document.querySelectorAll(".dismiss-btn");
    dismissBtns.forEach(btn => {
      btn.addEventListener("click", () => {
        const card = btn.closest(".recommendation-card");
        card.style.display = "none";
      });
    });
  </script>




